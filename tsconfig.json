{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceRoot": "./src",
		"types": ["node"],
		"declaration": true,
		"removeComments": false,
		"inlineSources": false,
		"inlineSourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUncheckedIndexedAccess": true,
		"importHelpers": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"strict": true
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "../docs",
		"defaultCategory": "General"
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts", "dist", "**/*.test.ts", "expressHelpers.ts"]
}
